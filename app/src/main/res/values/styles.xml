<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Divider">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:layout_gravity">center</item>
        <!--        <item name="android:background">?android:attr/listDivider</item>-->
        <item name="android:background">@color/background_more_black</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipIconVisible">true</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="rippleColor">@color/red_alpha</item>
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipIconTint">@color/chip_icon_color</item>
    </style>

    <style name="Font">
        <item name="fontFamily">@font/alata</item>
    </style>
</resources>